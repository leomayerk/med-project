<div class="row" style="margin-left:20%;margin-top:4%;">
<div class="col-10">


    <form action="/add-agend" method="POST">
        {{#each doctors}}
        <label> <b>Dados do Agendamento:</b></label><br>
        <br />
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-1 col-form-label col-form-label-sm">Medico:</label>
            <div class="col-sm-10">
                <input value={{nome}}&nbsp;{{sobrenome}} name ='nome' class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;" >
            </div>
        </div>
        </br>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-1 col-form-label col-form-label-sm">Atuação</label>
            <div class="col-sm-10">
                <input value={{atuacao}} name ='atuacao' class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;" >
            </div>
        </div>

        </br>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-1 col-form-label col-form-label-sm">Endereço:</label>
            <div class="col-sm-10">
                <input value={{endereco}} name ='endereco' class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;">
            </div>
        </div>
        </br>
        <div class="form-inline">
            <label for="" class="col-sm-1 col-form-label col-form-label-sm">Contato:</label>
            <input value={{contato}} name ="contato" class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;">
            
            <label for="colFormLabelSm" class="col-sm-1 col-form-label col-form-label-sm" style="margin-left:6%;">Convênio:</label>
            <input value={{convenio}} name ="convenio" class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;">
            
            <label for="" class="col-sm-1 col-form-label col-form-label-sm" style="margin-left:5.5%;">CRM:</label>
            <input value={{crm}} name ="crm" class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;">

        </div>
        </br>
        <hr>
        {{/each}}

        <label> <b>Prencha os campos abaixo:</b></label>
        <br>
        <br>

        

        <div class="form-inline">

            <label for="colFormLabelSm" class="col-sm-1 col-form-label col-form-label-sm" style="margin-right:1%;">Quando? </label>
            <input type="datetime-local" name="datHor" class="form-control form-control-sm" id="colFormLabelSm" style="border-top:0 none;border-right:0 none;border-left:0 none;">
            </br>
        </div>
        </br>

        <div class="form-group row">
            <label for="colFormLabelSm" style="margin-right:1%;" class="col-sm-1 col-form-label col-form-label-sm">Observação: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="info" id="exampleFormControlTextarea1" rows="3">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-left:80%;">Realizar agendamento</button>
    </form>
</div>
</div>
</div>
